[Unit]
Description=Ceph Monitor
After=docker.service

[Service]
EnvironmentFile=/etc/environment
ExecStartPre=-/usr/bin/docker kill %p
ExecStartPre=-/usr/bin/docker rm %p
ExecStartPre=/usr/bin/mkdir -p /etc/ceph /var/lib/ceph/mon
ExecStart=/usr/bin/docker run --rm --name %p --net=host     -v /var/lib/ceph:/var/lib/ceph     -v /etc/ceph:/etc/ceph     -e MON_IP=${COREOS_PRIVATE_IPV4}     -e CEPH_PUBLIC_NETWORK=${COREOS_PRIVATE_NETWORK}     -e KV_TYPE=etcd     -e KV_IP=${COREOS_PRIVATE_IPV4}     -e MON_NAME=%H     ceph/daemon mon
ExecStopPost=-/usr/bin/docker stop %p
ExecStopPost=-/usr/bin/docker rm %p
Restart=always
RestartSec=10s
TimeoutStartSec=120
TimeoutStopSec=15

[X-Fleet]
Conflicts=ceph-mon@*.service
MachineMetadata=has_ups=true

